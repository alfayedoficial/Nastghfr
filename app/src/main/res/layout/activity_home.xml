<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.HomeActivity"
    android:background="#43695A">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_HomeActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomBar_HomeActivity"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:backgroundColor="@color/background_nav"
        app:textColor="@color/text_color_nav"
        app:textSize="18sp"
        app:iconSize="24dp"
        app:indicatorColor="#2DFFFFFF"
        app:indicatorRadius="10dp"
        app:sideMargins="5dp"
        app:itemPadding="5dp"
        app:itemFontFamily="@font/ayman15"
        app:iconTint="@color/item_unselect_nav"
        app:iconTintActive="@color/item_select_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="3dp"
        />

    <FrameLayout
        android:id="@+id/containerFrameLayout_HomeActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar_HomeActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_HomeActivity">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>