<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimg_main"
    tools:context=".view.fragment.Sap7AllahFragment">


    <TextView
        android:id="@+id/txtCounter_Sap7Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/bein_normal"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/headerColor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/spinner_Sap7Fragment"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/spinner_Sap7Fragment"
        app:layout_constraintTop_toBottomOf="@+id/spinner_Sap7Fragment" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:elevation="3dp"
        android:src="@drawable/ic_spinner"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_Sap7Fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner_Sap7Fragment" />

    <Spinner
        android:id="@+id/spinner_Sap7Fragment"
        style="@style/spinnerItemStyle"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_spinner"
        android:elevation="2dp"
        android:gravity="center"
        android:paddingStart="33dp"
        android:paddingLeft="33dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <ImageButton
        android:id="@+id/imgBtnOnClick_Sap7Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_fingerprint"
        app:layout_constraintEnd_toEndOf="@+id/spinner_Sap7Fragment"
        app:layout_constraintStart_toStartOf="@+id/spinner_Sap7Fragment"
        app:layout_constraintTop_toBottomOf="@+id/txtCounter_Sap7Fragment" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/background_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtCounter_Sap7Fragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/ayman15"
            android:gravity="center"
            android:text="سبح الله"
            android:textColor="@color/background_nav"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>